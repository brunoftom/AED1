//EX.01//

//EX.02//
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main(){

    int x, y;
    float d;

    printf("Entre com a coordenada x: ");
    scanf ("%d", &x);
    printf("Entre com a coordenada y: ");
    scanf ("%d", &y);

    d = (0 - x)*(0 - x) + (0 - y) * (0 - y);
    d = sqrt(d);
    printf("\n\nA distancia entre os pontos (%d,%d) e (0,0) eh %.2f\n", x,y,d);

    return 0;
}

