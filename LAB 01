//EX.04//

//EX.05//
#include <stdio.h>
#include <stdlib.h>
int main(){
    int N;
    int i, j, c = 0;

    printf("Digite um numero: ");
    scanf("%d", &N);

    for(i=1; i <= N; i++){
        for(j=1;j<=i;j++){
            c++;
            printf("%d ", c);
        }
        printf("\n");
    }

    return 0;
}

